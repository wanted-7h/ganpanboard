{
	"deno.enable": true,
	"deno.lint": true,
	"deno.unstable": true,
	"deno.enablePaths": ["./"],
	"deno.config": "./deno.jsonc",
	"[github-actions-workflow]": {
		"editor.tabSize": 2
	},
	"[json][jsonc][markdown][typescript][typescriptreact]": {
